    .order('event_date', { ascending: true })
    .range(from, to); // ç¯„å›²æŒ‡å®šã‚’è¿½åŠ 

  if (error) {
    console.error('Supabase Error:', error);
    return { events: [], total: 0 };
  }
  
  return { events: data as unknown as Event[], total: count };
}

