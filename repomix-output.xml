  if (protectedPaths.some((path) => pathname.startsWith(path))) {
    
    // Cookieã€Œadmin_access_tokenã€ã‚’æŒã£ã¦ã„ã‚‹ã‹ç¢ºèª
    const hasAccessToken = request.cookies.has('admin_access_token');

